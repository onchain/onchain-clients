    "/api/address/balance/{coin_type}/{address}": {
      "get": {
        "summary": "Get Balance",
        "description": "Returns the satoshi balance, usd balance and user viewable balance for an address. For ERC20 tokens you need to pass in the contract ID and the number of decimal places.",
        "operationId": "Address_GetBalance",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/onchainBalanceReply"
            }
          },
          "default": {
            "description": "An unexpected error response",
            "schema": {
              "$ref": "#/definitions/runtimeError"
            }
          }
        },
        "parameters": [
          {
            "name": "coin_type",
            "in": "path",
            "required": true,
            "type": "string",
            "enum": [
              "BITCOIN",
              "ETHEREUM",
              "TESTNET3",
              "BITCOIN_CASH",
              "BITCOIN_GOLD",
              "LITECOIN",
              "DASH",
              "DOGE",
              "BITCOIN_PRIVATE",
              "ZCASH",
              "ZCASH_TESTNET",
              "ZCLASSIC"
            ]
          },
          {
            "name": "address",
            "description": "The public address to lookup",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "tags": [
          "Address"
        ]
      }
    },
